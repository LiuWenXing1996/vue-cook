{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "env.d.ts",
    "demos/**/*.ts",
    "demos/**/*.d.ts",
    "demos/**/*.tsx",
    "demos/**/*.vue",
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.d.ts",
    "docs/.vuepress/**/*.tsx",
    "docs/.vuepress/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}